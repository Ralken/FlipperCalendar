<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mCellLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    >
	
    <CheckedTextView
        android:id="@+id/mCellText"
        style="@style/CalendarCell.CalendarDate"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAlignment="center"
        android:gravity="center"
        android:paddingBottom="@dimen/calendar_text_medium_half" />
	
    <ImageView
        android:id="@+id/mCellDot"
        android:layout_width="5dip"
        android:layout_height="5dip"
        android:background="@color/calendar_dot_selector"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:layout_marginBottom="10dip"
        android:visibility="invisible"/>
</RelativeLayout>
